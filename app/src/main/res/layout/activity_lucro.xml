<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resumo do Lucro"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/roxo_primario"
            android:gravity="center"
            android:paddingBottom="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_card_verde"
            android:elevation="4dp">

            <TextView
                android:id="@+id/textGanhos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ganhos com Corridas: R$ 0.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/bg_card_vermelho_claro"
            android:elevation="4dp">

            <TextView
                android:id="@+id/textCustoCombustivel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Custo de Combustível: R$ 0.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/bg_card_vermelho"
            android:elevation="4dp">

            <TextView
                android:id="@+id/textDespesas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Despesas Gerais: R$ 0.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginVertical="16dp" />


        <TextView
            android:id="@+id/textLucroTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lucro Líquido: R$ 0.00"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/verde_primario"
            android:gravity="center"
            android:padding="12dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVoltarLucro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voltar"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/roxo_secundario"
            android:textColor="@color/white"
            android:textAllCaps="false"
            app:cornerRadius="16dp"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView>
