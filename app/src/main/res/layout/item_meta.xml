<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#E8EAF6"
    android:padding="16dp"
    android:elevation="3dp"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="8dp"
    android:clipToOutline="true">

    <TextView
        android:id="@+id/txtTituloMeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Meta"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtProgressoMeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 0,00 / R$ 0,00"
        android:textColor="@color/roxo_primario"
        android:textSize="15sp"
        android:layout_marginTop="4dp" />

    <ProgressBar
        android:id="@+id/progressMeta"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="6dp"
        android:progress="0"
        android:max="100"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressTint="@color/verde_primario"
        android:progressBackgroundTint="#D1C4E9" />
</LinearLayout>
